<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Trigger Jenkins Build</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 40px; }
    button { padding: 10px 20px; font-size: 16px; cursor: pointer; }
    #status { margin-top: 20px; }
  </style>
</head>
<body>
  <h1>Trigger Jenkins Build</h1>
  <button id="triggerBuild">Run Jenkins Job</button>
  <div id="status"></div>

  <script>
    // üîß Replace with your actual Jenkins server and job info
    const jenkinsJobName = "YOUR_JOB_NAME";
    const jenkinsToken = "YOUR_JOB_TRIGGER_TOKEN"; // The token from Jenkins job config
    const jenkinsUrl = `https://your-jenkins-server.com/buildByToken/build?job=${jenkinsJobName}&token=${jenkinsToken}`;

    document.getElementById("triggerBuild").addEventListener("click", async () => {
      document.getElementById("status").innerText = "Triggering build...";
      try {
        const response = await fetch(jenkinsUrl, { method: "POST" });

        if (response.ok) {
          document.getElementById("status").innerText = "‚úÖ Build triggered successfully!";
        } else {
          document.getElementById("status").innerText = "‚ùå Failed to trigger build. Check Jenkins settings.";
        }
      } catch (err) {
        document.getElementById("status").innerText = "‚ö†Ô∏è Error: " + err.message;
      }
    });
  </script>
</body>
</html>
